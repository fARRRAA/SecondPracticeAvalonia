<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="Srez.Windows.MaterialEditWindow"
        Title="Добавление материала"
        Icon="avares://Srez/Images/Мозаика.ico"
        Width="600" Height="750">

    <ScrollViewer>
        <StackPanel Margin="20" Spacing="15">
            <Border Background="{StaticResource Color.SecondaryBackground}" Padding="12" CornerRadius="4">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Image Source="avares://Srez/Images/Мозаика.png" Height="24" Stretch="Uniform"/>
                    <TextBlock Name="TitleText" Text="Добавление материала" FontSize="22" FontWeight="Bold" Margin="0,0,0,0"/>
                </StackPanel>
            </Border>

            <TextBlock Text="Наименование *"/>
            <TextBox Name="TbName" Text="{Binding Name, Mode=TwoWay}"/>

            <TextBlock Text="Тип материала *"/>
            <ComboBox Name="CbMaterialType" Width="300">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock Text="Количество на складе *"/>
            <TextBox Name="TbStockQuantity" Text="{Binding StockQuantity, Mode=TwoWay, StringFormat='{}{0:F2}'}"/>

            <TextBlock Text="Единица измерения *"/>
            <ComboBox Name="CbMeasurement" Width="300">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock Text="Количество в упаковке *"/>
            <TextBox Name="TbPackageQuantity" Text="{Binding PackageQuantity, Mode=TwoWay, StringFormat='{}{0:F2}'}"/>

            <TextBlock Text="Минимальное количество *"/>
            <TextBox Name="TbMinQuantity" Text="{Binding MinQuantity, Mode=TwoWay, StringFormat='{}{0:F2}'}"/>

            <TextBlock Text="Цена единицы материала *"/>
            <TextBox Name="TbUnitPrice" Text="{Binding UnitPrice, Mode=TwoWay, StringFormat='{}{0:F2}'}"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,20,0,0">
                <Button Name="BtnCancel" Content="Отмена" Width="100" Click="BtnCancel_Click"/>
                <Button Name="BtnSave" Content="Сохранить" Width="100" Click="BtnSave_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>


<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="SecondPracticeAvalonia.Windows.ViewLesson"
        Title="View Lesson"
        Width="900" Height="700">

    <Grid Margin="20" RowDefinitions="Auto,*,Auto">
        <TextBlock x:Name="LessonTitleText" Text="Lesson" FontSize="22" FontWeight="Bold" Margin="0,0,0,10" Grid.Row="0"/>

        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="10">
                <TextBlock x:Name="ContentText" TextWrapping="Wrap"/>
                <TextBlock Text="Video:" FontWeight="Bold" Margin="0,10,0,5"/>
                <TextBlock x:Name="VideoUrlText" TextWrapping="Wrap"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,10,0,0">
            <CheckBox x:Name="CompletedCheckBox" Content="Mark as Completed" VerticalAlignment="Center"/>
            <Button Name="btnSave" Content="Save Progress" Width="120" Click="btnSave_Click"/>
            <Button Name="btnClose" Content="Close" Width="100" Click="btnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>



<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="SecondPracticeAvalonia.Windows.ViewDiscussion"
        Title="Discussion"
        Width="800" Height="700">

    <Grid Margin="20" RowDefinitions="Auto,*,Auto">
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock x:Name="TitleText" Text="Discussion" FontSize="20" FontWeight="Bold"/>
            <TextBlock x:Name="StudentText" Text="" Margin="0,5,0,0"/>
            <TextBlock x:Name="QuestionText" TextWrapping="Wrap" Margin="0,10,0,0"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1">
            <StackPanel x:Name="RepliesPanel" Spacing="10">
            </StackPanel>
        </ScrollViewer>

        <Grid Grid.Row="2" RowDefinitions="Auto,Auto" Margin="0,10,0,0">
            <TextBox x:Name="ReplyTextBox" Grid.Row="0" AcceptsReturn="True" Height="80" IsVisible="False"/>
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,10,0,0">
                <Button Name="btnReply" Content="Reply" Width="100" Click="btnReply_Click" IsVisible="False"/>
                <Button Name="btnClose" Content="Close" Width="100" Click="btnClose_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>



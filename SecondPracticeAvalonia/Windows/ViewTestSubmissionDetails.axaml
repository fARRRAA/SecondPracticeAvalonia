<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="SecondPracticeAvalonia.Windows.ViewTestSubmissionDetails"
        Title="Test Submission Details"
        Width="900" Height="750">

    <Grid Margin="20" RowDefinitions="Auto,*,Auto">
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock x:Name="StudentNameText" Text="Student" FontSize="18" FontWeight="Bold"/>
            <TextBlock x:Name="ScoreText" Text="Score: 0/0" FontSize="14" Margin="0,5,0,0"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1">
            <StackPanel x:Name="AnswersPanel" Spacing="15">
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,10,0,0">
            <Button Name="btnClose" Content="Close" Width="100" Click="btnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>



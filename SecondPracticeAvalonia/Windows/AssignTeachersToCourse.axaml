<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="SecondPracticeAvalonia.Windows.AssignTeachersToCourse"
        Title="Assign Teachers to Course"
        Width="700" Height="750">

    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="Assign Teachers to Course" FontSize="22" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Course Info -->
        <TextBlock Text="Course:" FontWeight="Bold"/>
        <TextBlock x:Name="CourseTitleText" FontSize="14" Margin="0,0,0,10"/>

        <!-- Available Teachers -->
        <TextBlock Text="Available Teachers:" FontWeight="Bold" Margin="0,10,0,5"/>
        <ListBox x:Name="TeachersListBox" Height="250" SelectionMode="Multiple">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <TextBlock Text="{Binding Email}" FontWeight="Bold"/>
                        <TextBlock Text="-"/>
                        <TextBlock Text="{Binding FirstName}"/>
                        <TextBlock Text="{Binding LastName}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Assigned Teachers -->
        <TextBlock Text="Assigned Teachers:" FontWeight="Bold" Margin="0,10,0,5"/>
        <ListBox x:Name="AssignedTeachersListBox" Height="150" SelectionMode="Single">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <TextBlock Text="{Binding Teacher.Email}" FontWeight="Bold"/>
                        <TextBlock Text="-"/>
                        <TextBlock Text="{Binding Teacher.FirstName}"/>
                        <TextBlock Text="{Binding Teacher.LastName}"/>
                        <TextBlock Text="(Assigned:"/>
                        <TextBlock Text="{Binding AssignedAt, StringFormat='{}{0:dd.MM.yyyy}'}"/>
                        <TextBlock Text=")"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,20,0,0">
            <Button Name="btnAssign" Content="Assign Selected" Width="150" Click="btnAssign_Click"/>
            <Button Name="btnRemove" Content="Remove Selected" Width="150" Click="btnRemove_Click"/>
            <Button Name="btnClose" Content="Close" Width="100" Click="btnClose_Click"/>
        </StackPanel>
    </StackPanel>
</Window>



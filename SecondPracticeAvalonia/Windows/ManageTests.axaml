<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d"
		x:Class="SecondPracticeAvalonia.Windows.ManageTests"
		Title="Manage Tests"
		Width="900" Height="700">
	<Grid Margin="20" RowDefinitions="Auto,Auto,*,Auto">
		<TextBlock Text="Manage Tests" FontSize="22" FontWeight="Bold" Margin="0,0,0,10" Grid.Row="0"/>

		<Grid Grid.Row="1" RowDefinitions="Auto,Auto" Margin="0,0,0,10">
			<Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto,*" Margin="0,0,0,10">
				<TextBlock Text="Course:" VerticalAlignment="Center" Margin="0,0,10,0"/>
				<ComboBox x:Name="CourseComboBox" Grid.Column="1" Margin="0,0,20,0">
					<ComboBox.ItemTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding Title}"/>
						</DataTemplate>
					</ComboBox.ItemTemplate>
				</ComboBox>

				<TextBlock Text="Module:" VerticalAlignment="Center" Grid.Column="2" Margin="0,0,10,0"/>
				<ComboBox x:Name="ModuleComboBox" Grid.Column="3">
					<ComboBox.ItemTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding Title}"/>
						</DataTemplate>
					</ComboBox.ItemTemplate>
				</ComboBox>
			</Grid>

			<Grid Grid.Row="1" ColumnDefinitions="Auto,*">
				<TextBlock Text="Lesson:" VerticalAlignment="Center" Margin="0,0,10,0"/>
				<ComboBox x:Name="LessonComboBox" Grid.Column="1">
					<ComboBox.ItemTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding Title}"/>
						</DataTemplate>
					</ComboBox.ItemTemplate>
				</ComboBox>
			</Grid>
		</Grid>

		<DataGrid x:Name="TestsGrid" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,10,0,0">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
				<DataGridTextColumn Header="Type" Binding="{Binding Type.Name}" Width="120"/>
				<DataGridTextColumn Header="Max Score" Binding="{Binding MaxScore}" Width="100"/>
				<DataGridTextColumn Header="Deadline" Binding="{Binding Deadline, StringFormat='{}{0:dd.MM.yyyy}'}" Width="120"/>                <DataGridTemplateColumn Header="Actions" Width="200">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate>
							<StackPanel Orientation="Horizontal" Spacing="5">
								<Button Name="EditTest" Content="Edit" Tag="{Binding}" Click="EditTest_Click"/>
								<Button Name="DeleteTest" Content="Delete" Tag="{Binding}" Click="DeleteTest_Click"/>
							</StackPanel>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
			</DataGrid.Columns>
		</DataGrid>

		<StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,10,0,0">
			<Button Name="btnAddTest" Content="Add Test" Width="120" Click="btnAddTest_Click"/>
			<Button Name="btnClose" Content="Close" Width="100" Click="btnClose_Click"/>
		</StackPanel>
	</Grid>
</Window>

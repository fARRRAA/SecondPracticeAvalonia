<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SecondPracticeAvalonia.App"
             RequestedThemeVariant="Light">

    <Application.Resources>
        <FontFamily x:Key="DefaultFont">resm:Avalonia.Fonts.Inter#Inter</FontFamily>
        
        <!-- Color Palette -->
        <Color x:Key="PrimaryBackground">#FCFCFC</Color>
        <Color x:Key="PrimaryAccent">#2E7D32</Color>
        <Color x:Key="SecondaryAccent">#FF6F61</Color>
        <Color x:Key="SuccessColor">#4CAF50</Color>
        <Color x:Key="ErrorColor">#E53935</Color>
        <Color x:Key="NeutralColor">#546E7A</Color>
        <Color x:Key="TextPrimary">#212121</Color>
        <Color x:Key="TextSecondary">#757575</Color>
        <Color x:Key="BorderColor">#E0E0E0</Color>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>
        
        <!-- Custom Styles -->
        <Style Selector="Button">
            <Setter Property="Background" Value="#2E7D32"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="#1B5E20"/>
        </Style>
        
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="#212121"/>
        </Style>
    </Application.Styles>
</Application>


<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SecondPracticeAvalonia.Pages.StudentPage">
  <DockPanel>
    <Border DockPanel.Dock="Top" Background="#2E7D32" Padding="12">
      <Grid ColumnDefinitions="Auto,*,Auto,Auto" VerticalAlignment="Center">
        <TextBlock Text="Студент" Foreground="White" FontSize="16" FontWeight="Bold"/>
        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
          <Button Content="Мои курсы" Click="OnCoursesClick"/>
          <Button Content="Прогресс" Click="OnProgressClick"/>
        </StackPanel>
        <TextBlock Grid.Column="2" x:Name="UserInfoText" Foreground="White" Margin="8,0" VerticalAlignment="Center"/>
        <Button Grid.Column="3" Content="Выход" Click="OnLogoutClick"/>
      </Grid>
    </Border>

    <Grid Margin="12">
      <DataGrid x:Name="CoursesGrid" AutoGenerateColumns="False" IsReadOnly="True">
        <DataGrid.Columns>
          <DataGridTextColumn Header="Курс" Binding="{Binding Title}" Width="*"/>
          <DataGridTextColumn Header="Категория" Binding="{Binding CategoryName}"/>
          <DataGridTextColumn Header="Прогресс %" Binding="{Binding Progress}"/>
        </DataGrid.Columns>
      </DataGrid>

      <DataGrid x:Name="ProgressGrid" AutoGenerateColumns="False" IsReadOnly="True" IsVisible="False">
        <DataGrid.Columns>
          <DataGridTextColumn Header="Урок" Binding="{Binding LessonTitle}" Width="*"/>
          <DataGridTextColumn Header="Курс" Binding="{Binding CourseTitle}"/>
          <DataGridCheckBoxColumn Header="Завершен" Binding="{Binding IsCompleted}"/>
          <DataGridTextColumn Header="Секунды" Binding="{Binding LastPositionSeconds}"/>
        </DataGrid.Columns>
      </DataGrid>
    </Grid>
  </DockPanel>
</UserControl>




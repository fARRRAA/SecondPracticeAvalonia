<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             
             x:Class="SecondPracticeAvalonia.LoginPage" Width="560" Height="460">
  <Grid RowDefinitions="Auto,*,Auto">
    <TextBlock Text="EduTrack - online learning management"
               FontSize="16" FontWeight="Bold" Margin="20,20,20,0"/>

    <StackPanel Grid.Row="1" Spacing="8" Margin="20">
      <TextBlock Text="E-mail"/>
      <TextBox x:Name="EmailTextBox" Watermark="name@example.com"/>

      <TextBlock Text="Password" Margin="0,8,0,0"/>
      <TextBox x:Name="PasswordTextBox" PasswordChar="*"/>

      <CheckBox x:Name="RememberCheck" Content="Remember me" Margin="0,8,0,0"/>

      <Button x:Name="LoginButton" Content="Enter" Margin="0,16,0,0" HorizontalAlignment="Stretch" Click="LoginButton_Click"/>
      <TextBlock x:Name="ErrorText" Foreground="Red" TextWrapping="Wrap" IsVisible="False"/>
    </StackPanel>

    <TextBlock Grid.Row="2" Text="© EduTrack" HorizontalAlignment="Center" Margin="0,12,0,0" Opacity="0.7"/>
  </Grid>
</UserControl>
